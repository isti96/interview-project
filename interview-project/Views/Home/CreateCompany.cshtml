@model interview_project.Models.CompanyModel

@{
    ViewData["Title"] = "Create Company";
}

<div class="container mt-4">
    <h2>Create a New Company</h2>

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <form asp-action="Create" asp-controller="Home" method="post">
        @Html.AntiForgeryToken()

        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="StockTicker" class="form-label"></label>
            <input asp-for="StockTicker" class="form-control" />
            <span asp-validation-for="StockTicker" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Exchange" class="form-label"></label>
            <input asp-for="Exchange" class="form-control" />
            <span asp-validation-for="Exchange" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ISIN" class="form-label"></label>
            <input asp-for="ISIN" class="form-control" />
            <span asp-validation-for="ISIN" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="WebsiteURL" class="form-label"></label>
            <input asp-for="WebsiteURL" class="form-control" />
            <span asp-validation-for="WebsiteURL" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Save Company</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

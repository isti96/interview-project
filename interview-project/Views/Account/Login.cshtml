@model interview_project.Models.LoginViewModel

<head>
    <link rel="stylesheet" href="~/css/Login.css" />
</head>

<div class="container">
    <h2>Login</h2>

    <form asp-action="Login" asp-controller="Account" method="post">
        @Html.AntiForgeryToken()

        <div class="form-group">
            <label asp-for="Username" class="form-label"></label>
            <input asp-for="Username" class="form-control input" />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Password" class="form-label"></label>
            <input asp-for="Password" class="form-control input" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Login</button>
    </form>

    <div class="mt-3">
        <a asp-controller="Account" asp-action="Register">Don't have an account? Register here.</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
